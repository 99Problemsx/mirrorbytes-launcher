{
  "name": "mirrorbytes-studio",
  "version": "1.0.0",
  "description": "Mirrorbytes Studio - Modern Multi-Game Launcher for Pok√©mon Fangames",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && cross-env ELECTRON_ENABLE_LOGGING=1 electron .",
    "build": "vite build",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "npm run build && electron-builder --mac",
    "build:linux": "npm run build && electron-builder --linux"
  },
  "keywords": [
    "pokemon",
    "launcher",
    "electron",
    "react"
  ],
  "author": "Mirrorbytes Studio",
  "license": "MIT",
  "devDependencies": {
    "@types/react": "^18.2.43",
    "@types/react-dom": "^19.2.2",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^38.2.2",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "tailwindcss": "^3.4.0",
    "vite": "^7.1.9",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "adm-zip": "^0.5.16",
    "discord-rpc": "^4.0.1",
    "dotenv": "^17.2.3",
    "framer-motion": "^10.16.16",
    "react": "^18.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^4.12.0",
    "react-markdown": "^10.1.0",
    "react-toastify": "^11.0.5",
    "recharts": "^3.2.1"
  },
  "build": {
    "appId": "com.mirrorbytes.launcher",
    "productName": "Mirrorbytes Launcher",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}
