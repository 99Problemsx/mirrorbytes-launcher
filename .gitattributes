# Normalize line endings
* text=auto

# Ruby files
*.rb text eol=lf
*.rake text eol=lf
Gemfile text eol=lf
Rakefile text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Windows scripts
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.json text eol=lf
*.xml text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Graphics
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.bmp binary
*.svg text

# Audio
*.mp3 binary
*.ogg binary
*.wav binary
*.mid binary
*.midi binary

# Fonts
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary

# Archives
*.zip binary
*.tar binary
*.gz binary
*.rar binary
*.7z binary

# RPG Maker files
*.rxdata binary
*.rvdata binary
*.rvdata2 binary
*.rxproj text eol=crlf

# Git specific
.gitattributes text eol=lf
.gitignore text eol=lf
